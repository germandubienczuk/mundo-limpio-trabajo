  <div id="suppliers">
    <br>
      <div class="panel panel-primary text-center">
        <!-- Default panel contents -->
        <div class="panel-heading">Listado de Proveedores</div>

        <!-- Table -->
        <table class="table table-bordered table-condensed">
          <thead >
          <tr>
          <th class="text-center info"><%= "Nombre"%></th>
          
          <th class="text-center info">Acciones</th>
          </tr>
          </thead>

          <tbody>
            <% @suppliers.each do |supplier| %>
              <tr>
                <td><%= supplier.name %></td>
                
                <td>
                  <div class="btn-group">
                    <%= link_to 'Ver', supplier ,:class=>"btn btn-default btn-xs"%>
                    <%= link_to 'Editar', edit_supplier_path(supplier),:class=>"btn btn-default  btn-xs" %>
                    <%= link_to 'Eliminar', supplier, method: :delete, data: { confirm: '¿Está seguro que desea eliminar el Proveedor?' },:class=>"btn  btn-default  btn-xs" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
          


        </table>

      </div>
      <div class="text-center">
        <%= paginate @suppliers %>
      </div>

      <br>
  </div>

