
<%= form_for(@client, html: { class: "form-horizontal" }) do |f| %>

  <% if @client.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        Error
      </div>
      <% @client.errors.full_messages.each do |msg| %>
        <div class="alert">* <%= msg %></div>
      <% end %>
    </div>
  <% end %>

  <fieldset>
  <legend><h1 class="text-center"><%= @legend %></h1></legend>

  <div class="form-group">
    <label class="col-md-4 control-label"></label>  
    <div class="col-md-4">
    <%= f.text_field :name, autofocus: true, class: "form-control input-md", placeholder: "Nombre" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label"></label>  
    <div class="col-md-4">
    <%= f.text_field :lastname, class: "form-control input-md", placeholder: "Apellido" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label"></label>  
    <div class="col-md-4">
    <%= f.text_field :cuit, class: "form-control input-md", placeholder: "Cuit" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label"></label>  
    <div class="col-md-4">
    <%= f.text_field :address, class: "form-control input-md", placeholder: "DirecciÃ³n" %>
    </div>
  </div>

  <!-- Button -->
  <div class="form-group">
    <label class="col-md-4 control-label" for="btn"></label>
    <div class="col-md-4">
      <br><br>
      <%= f.submit "Guardar", class: "btn btn-lg btn-primary  btn-block"%>
      <%= link_to 'Volver', clients_path ,:class=> "btn btn-lg btn-primary btn-block"%>
    </div>
  </div>

  <fieldset>
<% end %>