<%= form_tag categories_path, :method => 'get', :id => "categories_search" , class: "form-horizontal" do %>
	<fieldset>
	<legend><h1 class="text-center"><%= @legend %></h1></legend>
	<div class="form-group">
	<div class="col-md-4"></div>  
	<div class="col-md-4">
	<%= text_field_tag :search, params[:search] , class: "form-control", placeholder: "Buscar" %>
	</div>
	</div>
	<div class="form-group">
	<div class="col-md-4"></div>  
	<div class="col-md-4">
	<%= link_to 'Nueva Categoria', new_category_path ,:class=>"btn btn-lg btn-primary btn-block" %>
	</div>
	</div>
		
	</fieldset>
<% end %>