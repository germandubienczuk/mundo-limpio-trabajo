  <div id="categories">
    <br>
      <div class="panel panel-primary text-center">
        <!-- Default panel contents -->
        <div class="panel-heading">Listado de Categorias</div>

        <!-- Table -->
        <table class="table table-bordered table-condensed">
          <thead >
          <tr>
          <th class="text-center info"><%= "Nombre"%></th>
          
          <th class="text-center info">Acciones</th>
          </tr>
          </thead>

          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                
                <td>
                  <div class="btn-group">
                    <%= link_to 'Ver', category ,:class=>"btn btn-default btn-xs"%>
                    <%= link_to 'Editar', edit_category_path(category),:class=>"btn btn-default  btn-xs" %>
                    <%= link_to 'Eliminar', category, method: :delete, data: { confirm: '¿Está seguro que desea eliminar la categoria?' },:class=>"btn  btn-default  btn-xs" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
          


        </table>

      </div>
      <div class="text-center">
        <%= paginate @categories %>
      </div>

      <br>
  </div>
