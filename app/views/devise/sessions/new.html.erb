

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-signin' }) do |f| %>
<h2 class="form-signin-heading text-center">Ingresar</h2>
<hr>
<div>
	<%= f.text_field :login, :autofocus => true , class: "form-control", placeholder: "Usuario o Email" %>
</div>

<div>
	<%= f.password_field :password, autocomplete: "off" , class: "form-control", placeholder: "ContraseÃ±a"%>
</div>

<% if devise_mapping.rememberable? -%>
	<label class="checkbox ">
      <input value="remember-me" type="checkbox"> Remember me
    </label>
<% end -%>


<div><%= f.submit "Ingresar" , class: "btn btn-lg btn-primary btn-block" %></div>
<% end %>


